{% extends 'base.html.twig' %}

{% block title %}Aide index{% endblock %}

{% block body %}

    {{ parent() }}

    <h1>Aide index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aide in aides %}
            <tr>
                <td>{{ aide.id }}</td>
                <td>{{ aide.titre }}</td>
                <td>{{ aide.description }}</td>
                <td>{{ aide.adresse }}</td>
                <td>
                    <a href="{{ path('aide_show', {'id': aide.id}) }}">show</a>
                    <a href="{{ path('aide_edit', {'id': aide.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aide_new') }}">Create new</a>
{% endblock %}
