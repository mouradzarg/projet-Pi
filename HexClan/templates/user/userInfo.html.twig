
{% if type=='user' %}
    {%  set x='user/userIndex.html.twig' %}
{% else %}
    {%  set x='adminBase.html.twig' %}

{% endif %}
{% extends x %}
{% block title %}<title>User name</title>{% endblock title %}

{% block body %}
    {{ parent() }}
{% block hero%}
    <section id="subscribe"></section>
    {{ form_start(form)}}
    <section id="contact" class="section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>Modifier Vos coordonnées</h2>
                <p></p>
            </div>
            <div class="form">
                <form action="{{ path('inscrit') }}" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <div class="form-control">
                                {{ form_label(form.nom,"nom") }}
                                {{ form_widget(form.nom) }}
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-control">
                                {{ form_label(form.prenom,"Prenom") }}
                                {{ form_widget(form.prenom) }}
                            </div>
                            <!-- <input type="text" name="prenom" class="form-control" id="name" placeholder="Prenom" required>-->
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 mt-6 mt-md-0">
                            <div class="form-control">
                                {{ form_label(form.email,"Email") }}
                                {{ form_widget(form.email) }}
                            </div>
                            <!--<input type="email" class="form-control" name="email" id="email" placeholder="adresse Email" required>-->
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-control">
                                {{ form_label(form.password,"Password") }}
                                {{ form_widget(form.password) }}
                            </div>
                            <!--<input type="password" name="password" class="form-control" id="name" placeholder="mot de passe" required>-->
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 mt-6 mt-md-0">
                            <div class="form-control">
                                {{ form_label(form.dateNaiss,"Date de naissance") }}
                                {{ form_widget(form.dateNaiss) }}
                            </div>
                            <!--<input type="date" class="form-control" name="date" id="email" placeholder="Date de Naissance" required>-->
                        </div>

                        <div class=" form-group col-md-6">
                            <div class="form-control">
                                {{ form_label(form.cin,"Cin") }}
                                {{ form_widget(form.cin) }}
                            </div>
                            <!--<input type="text" name="cin" class="form-control" id="name" placeholder="cin" required>-->
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 mt-6 mt-md-0">
                            <div class="form-control">
                                {{ form_label(form.numTel,"Numero de télephone") }}
                                {{ form_widget(form.numTel) }}
                            </div>
                            <!--<input type="text" name="tel" class="form-control" id="name" placeholder="telephone" required>-->
                        </div>
                    </div>
                    <div class="my-6">
                        <!-- <div class="loading">Loading</div>
                         <div class="error-message"></div>
                         <div class="sent-message">Vérifier votre mail pour la confirmation du compte</div>-->
                    </div>
                    <div class="form-control text-center">
                        </div>
                    <!-- <div class="text-center"><button type="submit">Créer un compte</button></div>-->
                    {{ form_end(form) }}
            </div>

        </div>
    </section><!-- End Contact Section -->
    {% endblock hero %}
{% endblock body %}