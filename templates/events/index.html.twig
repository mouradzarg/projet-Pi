{% extends 'base.html.twig' %}
{% block title 'Consulter ' %}
{% block body %}
    <div class="container mt-4">
    <h1>Les Événements : </h1>

        <div class="search-bar p-0 d-none d-md-block ms-2">
            <div id="search" class="menu-search mb-0">
                <form action="#" method="get">
                    <div class="input-group">
                        <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                        <input class="form-control" id="system-search" name="q" placeholder="Recherche" required>
                        <span class="input-group-btn">
                                          <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                    </div>


                </form>
            </div>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                <div class="input-group">
                                        <span class="input-group-btn">
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron text-center">
    <div class="row flex">

        {% for event in events %}
            <div class="col-3">
                <div class="card">
                    {% if event.filename %}
                        <img src="{{ vich_uploader_asset(event,'imageFile')  }}" alt="card-img-top" style="width: 100%;height: auto">
                    {%  endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('event.show', {id: event.id, slug: event.slug}) }}">{{ event.titre }}</a>
                        </h5>
                        <p class="card-text">{{ event.description }} </p>
                        <p class="card-text">Adresse : {{  event.adresse }} </p>
                        <p class="card-text">Ville : {{  event.ville }} </p>
                        <p class="card-text">{{ event.description }} </p>
                        <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ event.prix | number_format(0, '', ' ') }} DT</div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

    <div class="pagination justify-content-center mt-3 ">
        {{  knp_pagination_render(events) }}
    </div>

{% endblock %}